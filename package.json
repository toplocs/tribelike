{
  "name": "@tribelike/root",
  "version": "1.0.0",
  "description": "Playground for concepts",
  "workspaces": [
    "client",
    "server",
    "types"
  ],
  "engines": {
    "node": ">=20",
    "pnpm": ">=3"
  },
  "scripts": {
    "dev": "pnpm -F server gun-minimal & pnpm -F client dev",
    "dev:https": "pnpm -F server dev:https & pnpm -F client dev:https",
    "test": "pnpm vitest dev --run",
    "check": "pnpm -F !root check",
    "lint": "pnpm -F !root lint",
    "build": "pnpm -F !root build",
    "generate:openapi": "pnpm -F server generate:openapi",
    "start": "pnpm -F server start",
    "certs": "mkcert 'localhost'",
    "clear": "rm -rf server/data/sessions/*",
    "db:migrate": "pnpm -F server db:migrate"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "jspdf@<3.0.1": ">=3.0.1",
      "vite@>=6.2.0 <6.2.6": ">=6.2.6",
      "vite@>=6.2.0 <=6.2.6": ">=6.2.7",
      "vite@>=6.2.0 <6.2.5": ">=6.2.5",
      "brace-expansion@>=1.0.0 <=1.1.11": ">=1.1.12",
      "brace-expansion@>=2.0.0 <=2.0.1": ">=2.0.2",
      "dompurify@<3.2.4": ">=3.2.4",
      "@eslint/plugin-kit@<0.3.4": ">=0.3.4",
      "on-headers@<1.1.0": ">=1.1.0",
      "vite@>=6.0.0 <=6.3.5": ">=6.3.6",
      "vite@>=7.0.0 <=7.0.6": ">=7.0.7",
      "jspdf@<=3.0.1": ">=3.0.2",
      "axios@>=1.0.0 <1.12.0": ">=1.12.0",
      "vite@>=6.0.0 <=6.4.0": ">=6.4.1",
      "vite@>=7.0.0 <=7.0.7": ">=7.0.8",
      "form-data@>=4.0.0 <4.0.4": ">=4.0.4",
      "js-yaml@>=4.0.0 <4.1.1": ">=4.1.1",
      "nodemailer@<7.0.7": ">=7.0.7",
      "body-parser@>=2.2.0 <2.2.1": ">=2.2.1",
      "nodemailer@<=7.0.10": ">=7.0.11",
      "nodemailer@<7.0.11": ">=7.0.11"
    }
  }
}
